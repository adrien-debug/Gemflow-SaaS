<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001_ORDER_TASK_V2_CREATE" author="${author}">
        <dropTable tableName="order_task_file"/>
        <dropTable tableName="order_task_gemstone"/>

        <dropColumn tableName="order_task" columnName="name"/>
        <dropColumn tableName="order_task" columnName="size"/>
        <dropColumn tableName="order_task" columnName="stl_number"/>
        <dropColumn tableName="order_task" columnName="cad_time_spent"/>
        <dropColumn tableName="order_task" columnName="due_date"/>
        <dropColumn tableName="order_task" columnName="envelope_text"/>
        <dropColumn tableName="order_task" columnName="priority"/>
        <dropColumn tableName="order_task" columnName="client_id"/>
        <dropColumn tableName="order_task" columnName="hallmark_logo_id"/>
        <dropColumn tableName="order_task" columnName="segment_id"/>

        <modifyDataType tableName="order_task" columnName="status" newDataType="varchar(24)"/>
        <addColumn tableName="order_task">
            <column name="stl_count" type="integer"/>
        </addColumn>

        <createTable tableName="order_task_image">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="size_type" type="varchar(24)">
                <constraints nullable="false"/>
            </column>
            <column name="order_task_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="atelier_file_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="order_task_image__order_task_id"
                                 baseTableName="order_task_image" baseColumnNames="order_task_id"
                                 referencedTableName="order_task" referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="order_task_image__atelier_file_id"
                                 baseTableName="order_task_image" baseColumnNames="atelier_file_id"
                                 referencedTableName="atelier_file" referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="002_ORDER_TASK_V2_CREATE" author="${author}">
        <dropForeignKeyConstraint baseTableName="order_task_metal" constraintName="fk_order_task_metal__order_task"/>
        <addForeignKeyConstraint constraintName="fk_order_task_metal__order_task"
                                 baseTableName="order_task_metal" baseColumnNames="order_task_id"
                                 referencedTableName="order_task" referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <dropForeignKeyConstraint baseTableName="order_task_image" constraintName="order_task_image__order_task_id"/>
        <addForeignKeyConstraint constraintName="order_task_image__order_task"
                                 baseTableName="order_task_image" baseColumnNames="order_task_id"
                                 referencedTableName="order_task" referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="003_ORDER_TASK_V2_CREATE" author="${author}">
        <addNotNullConstraint tableName="order_task" columnName="order_id"/>
    </changeSet>

    <changeSet id="004_ORDER_TASK_V2_CREATE" author="${author}">
        <addColumn tableName="order_task">
            <column name="cylinder_id" type="bigint"/>
        </addColumn>
        <addForeignKeyConstraint constraintName="order_task__cylinder"
                                 baseTableName="order_task" baseColumnNames="cylinder_id"
                                 referencedTableName="cylinder" referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="004_ORDER_TASK_V2_UPDATE" author="${author}">
        <dropUniqueConstraint tableName="order_task_metal" constraintName="uk_order_task_metal_unique"/>
        <addPrimaryKey tableName="order_task_metal" columnNames="order_task_id, metal_id"/>
    </changeSet>

    <changeSet id="005_ORDER_TASK_V2_UPDATE" author="${author}">
        <update tableName="order_task">
            <column name="status" value="READY_FOR_CASTING"/>
            <where>status = 'IN_CASTING'</where>
        </update>
        <addColumn tableName="order_task">
            <column name="weight" type="numeric(8,2)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>