<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001_PROJECT_IMAGE_CREATE" author="${author}">
        <createTable tableName="project_image">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="size_type" type="varchar(24)">
                <constraints nullable="false"/>
            </column>
            <column name="image_type" type="varchar(24)">
                <constraints nullable="false"/>
            </column>
            <column name="project_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="atelier_file_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="project_image__project_id"
                                 baseTableName="project_image" baseColumnNames="project_id"
                                 referencedTableName="project" referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="project_image__atelier_file_id"
                                 baseTableName="project_image" baseColumnNames="atelier_file_id"
                                 referencedTableName="atelier_file" referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
