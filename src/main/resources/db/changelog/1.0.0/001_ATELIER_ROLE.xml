<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001_ATELIER_ROLE_CREATE" author="${author}">
        <createTable tableName="atelier_role">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="varchar(32)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(32)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="002_ATELIER_ROLE_INSERT" author="${author}">
        <insert tableName="atelier_role">
            <column name="code" value="SUPER_ADMIN"/>
            <column name="name" value="Super Admin"/>
        </insert>
        <insert tableName="atelier_role">
            <column name="code" value="ADMIN"/>
            <column name="name" value="Admin"/>
        </insert>
        <insert tableName="atelier_role">
            <column name="code" value="USER"/>
            <column name="name" value="User"/>
        </insert>
    </changeSet>

    <changeSet id="003_ATELIER_ROLE_RENAME" author="${author}">
        <update tableName="atelier_role">
            <column name="name" value="Employee"/>
            <column name="code" value="EMPLOYEE"/>
            <where>code = 'USER'</where>
        </update>
    </changeSet>
</databaseChangeLog>
