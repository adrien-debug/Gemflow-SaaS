<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001_ATELIER_TOKEN_CREATE" author="${author}">
        <createTable tableName="atelier_token">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="UUID">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="type" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="expired_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="atelier_token__user_id"
                                 baseTableName="atelier_token" baseColumnNames="user_id"
                                 referencedTableName="atelier_user" referencedColumnNames="id"/>
        <addUniqueConstraint constraintName="atelier_token__user_type_unique"
                             tableName="atelier_token"
                             columnNames="user_id, type"/>
    </changeSet>
</databaseChangeLog>
