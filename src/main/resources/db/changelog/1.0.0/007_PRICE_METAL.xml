<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001_PRICE_METAL_CREATE" author="${author}">
        <createTable tableName="price_metal">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="rate" type="numeric(6, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="price_setting_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="002_PRICE_METAL_CREATE" author="${author}">
        <addForeignKeyConstraint constraintName="fk_price_setting_price_metal"
                                 baseColumnNames="price_setting_id"
                                 baseTableName="price_metal"
                                 referencedColumnNames="id"
                                 referencedTableName="price_setting"
                                 onDelete="CASCADE"
                                 onUpdate="NO ACTION"/>
    </changeSet>

    <changeSet id="003_PRICE_METAL_DROP_NAME" author="${author}">
        <dropColumn tableName="price_metal" columnName="name"/>
    </changeSet>
</databaseChangeLog>
