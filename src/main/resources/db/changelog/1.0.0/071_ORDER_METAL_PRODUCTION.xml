<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001_ORDER_METAL_PRODUCTION" author="${author}">
        <createTable tableName="order_metal_production">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="material_type" type="VARCHAR(24)">
                <constraints nullable="false"/>
            </column>
            <column name="operation" type="VARCHAR(24)">
                <constraints nullable="false"/>
            </column>
            <column name="cost" type="NUMERIC(13, 3)">
                <constraints nullable="false"/>
            </column>
            <column name="weight" type="NUMERIC(8, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="employee_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="metal_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="metal_purity_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="alloyed_metal_id" type="BIGINT"/>
            <column name="other_material_id" type="BIGINT"/>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_order_metal_production__order"
                                 baseTableName="order_metal_production" baseColumnNames="order_id"
                                 referencedTableName="atelier_order" referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_order_metal_production__employee"
                                 baseTableName="order_metal_production" baseColumnNames="employee_id"
                                 referencedTableName="atelier_user" referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_order_metal_production__metal"
                                 baseTableName="order_metal_production" baseColumnNames="metal_id"
                                 referencedTableName="metal" referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_order_metal_production__metal_purity"
                                 baseTableName="order_metal_production" baseColumnNames="metal_purity_id"
                                 referencedTableName="metal_purity" referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_order_metal_production__alloyed_metal"
                                 baseTableName="order_metal_production" baseColumnNames="alloyed_metal_id"
                                 referencedTableName="alloyed_metal" referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_order_metal_production__other_material"
                                 baseTableName="order_metal_production" baseColumnNames="other_material_id"
                                 referencedTableName="other_material" referencedColumnNames="id"/>

        <createIndex tableName="order_metal_production" indexName="idx_order_metal_production_order_id">
            <column name="order_id"/>
        </createIndex>
        <createIndex tableName="order_metal_production" indexName="idx_order_metal_production_employee_id">
            <column name="employee_id"/>
        </createIndex>
        <createIndex tableName="order_metal_production" indexName="idx_order_metal_production_metal_id">
            <column name="metal_id"/>
        </createIndex>
        <createIndex tableName="order_metal_production" indexName="idx_order_metal_production_metal_purity_id">
            <column name="metal_purity_id"/>
        </createIndex>
        <createIndex tableName="order_metal_production" indexName="idx_order_metal_production_alloyed_metal_id">
            <column name="alloyed_metal_id"/>
        </createIndex>
        <createIndex tableName="order_metal_production" indexName="idx_order_metal_production_other_material_id">
            <column name="other_material_id"/>
        </createIndex>

        <sql dbms="${dbms}">
            ALTER TABLE order_metal_production
                ADD CONSTRAINT alloyed_metal_id_not_null CHECK (material_type != 'ALLOYED_METAL' OR alloyed_metal_id IS NOT NULL);
            ALTER TABLE order_metal_production
                ADD CONSTRAINT other_material_id_not_null CHECK (material_type != 'OTHER' OR other_material_id IS NOT NULL);
        </sql>
    </changeSet>

</databaseChangeLog>