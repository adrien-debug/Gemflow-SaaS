<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001_ATELIER_USER_CREATE" author="${author}">
        <createTable tableName="atelier_user">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="oid" type="UUID">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(32)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="email" type="varchar(256)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="002_ATELIER_USER_UPDATE" author="${author}">
        <dropColumn tableName="atelier_user" columnName="username"/>
        <addColumn tableName="atelier_user">
            <column name="is_active" type="boolean"/>
        </addColumn>
        <update tableName="atelier_user">
            <column name="is_active" value="true"/>
        </update>
        <addNotNullConstraint tableName="atelier_user" columnName="is_active"/>
    </changeSet>
</databaseChangeLog>
