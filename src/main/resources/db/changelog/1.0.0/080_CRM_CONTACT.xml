<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001_CREATE_CRM_CONTACT" author="${author}">
        <comment>Create CRM contact table</comment>
        
        <createTable tableName="crm_contact">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tenant_id" type="BIGINT" defaultValueNumeric="1">
                <constraints nullable="false"/>
            </column>
            <column name="client_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(128)">
                <constraints nullable="true"/>
            </column>
            <column name="last_name" type="VARCHAR(128)">
                <constraints nullable="true"/>
            </column>
            <column name="phone" type="VARCHAR(32)">
                <constraints nullable="true"/>
            </column>
            <column name="company" type="VARCHAR(256)">
                <constraints nullable="true"/>
            </column>
            <column name="notes" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="tags" type="VARCHAR(512)">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_crm_contact__client"
                                 baseTableName="crm_contact" baseColumnNames="client_id"
                                 referencedTableName="client" referencedColumnNames="id"/>

        <createIndex tableName="crm_contact" indexName="idx_crm_contact_email">
            <column name="email"/>
        </createIndex>
        <createIndex tableName="crm_contact" indexName="idx_crm_contact_tenant_id">
            <column name="tenant_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
