<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001_OTHER_MATERIAL_TRANSACTION_CREATE" author="${author}">
        <createTable tableName="other_material_transaction">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="version" type="BIGINT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="balance_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(120)">
                <constraints nullable="false"/>
            </column>
            <column name="batch_weight" type="numeric(11,5)">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="bigint"/>
            <column name="other_material_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_other_material_transaction__order"
                                 baseTableName="other_material_transaction" baseColumnNames="order_id"
                                 referencedTableName="atelier_order" referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_other_material_transaction__other_material"
                                 baseTableName="other_material_transaction" baseColumnNames="other_material_id"
                                 referencedTableName="other_material" referencedColumnNames="id"/>

        <createIndex tableName="other_material_transaction" indexName="idx_other_material_transaction_order_id">
            <column name="order_id"/>
        </createIndex>
        <createIndex tableName="other_material_transaction" indexName="idx_other_material_transaction_other_material_id">
            <column name="other_material_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="002_OTHER_MATERIAL_TRANSACTION_CREATE" author="${author}">
        <sqlFile path="066_CREATE_UPDATE_OTHER_MATERIAL_FUNCTION.sql" relativeToChangelogFile="true" dbms="${dbms}"/>
    </changeSet>

    <changeSet id="003_OTHER_MATERIAL_TRANSACTION_CREATE" author="${author}">
        <sql dbms="${dbms}">
            CREATE TRIGGER tr_other_material_transaction_insert
                AFTER INSERT
                ON public.other_material_transaction
                FOR EACH ROW
                EXECUTE FUNCTION update_other_material_summary();

            CREATE TRIGGER tr_other_material_transaction_update
                AFTER UPDATE
                ON public.other_material_transaction
                FOR EACH ROW
                EXECUTE FUNCTION update_other_material_summary();

            CREATE TRIGGER tr_other_material_transaction_delete
                AFTER DELETE
                ON public.other_material_transaction
                FOR EACH ROW
                EXECUTE FUNCTION update_other_material_summary();
        </sql>
    </changeSet>

</databaseChangeLog>