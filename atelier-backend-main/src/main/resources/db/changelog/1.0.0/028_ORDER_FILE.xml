<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001_ORDER_FILE_CREATE" author="${author}">
        <createTable tableName="order_file">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="image_type" type="varchar(24)">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="atelier_file_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_order_image_order_id"
                                 baseTableName="order_file"
                                 baseColumnNames="order_id"
                                 referencedTableName="atelier_order"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_order_image_atelier_file_id"
                                 baseTableName="order_file"
                                 baseColumnNames="atelier_file_id"
                                 referencedTableName="atelier_file"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="002_ORDER_FILE_CHANGE" author="${author}">
        <renameColumn tableName="order_file" oldColumnName="image_type" newColumnName="file_type"/>
    </changeSet>

    <changeSet id="003_ORDER_FILE_CHANGE" author="${author}">
        <dropForeignKeyConstraint baseTableName="order_file" constraintName="fk_order_image_order_id"/>
        <dropForeignKeyConstraint baseTableName="order_file" constraintName="fk_order_image_atelier_file_id"/>

        <addForeignKeyConstraint constraintName="fk_order_file_order_id"
                                 baseTableName="order_file"
                                 baseColumnNames="order_id"
                                 referencedTableName="atelier_order"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_order_file_atelier_file_id"
                                 baseTableName="order_file"
                                 baseColumnNames="atelier_file_id"
                                 referencedTableName="atelier_file"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
