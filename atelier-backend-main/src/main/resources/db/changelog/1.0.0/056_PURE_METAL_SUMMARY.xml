<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001_PURE_METAL_SUMMARY_CREATE" author="${author}">
        <createTable tableName="pure_metal_summary">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="total_cost" type="numeric(13, 3)">
                <constraints nullable="false"/>
            </column>
            <column name="current_total_cost" type="numeric(13, 3)">
                <constraints nullable="false"/>
            </column>
            <column name="remaining_weight" type="numeric(8, 5)">
                <constraints nullable="false"/>
            </column>
            <column name="price_metal_name_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_pure_metal_summary_price_metal_name"
                                 baseTableName="pure_metal_summary" baseColumnNames="price_metal_name_id"
                                 referencedTableName="price_metal_name" referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="002_PURE_METAL_SUMMARY_CREATE" author="${author}">
        <sql dbms="${dbms}">
            INSERT INTO pure_metal_summary (
                total_cost,
                current_total_cost,
                remaining_weight,
                price_metal_name_id
            )
            SELECT
                0.000 AS total_cost,
                0.000 AS current_total_cost,
                0.00000 AS remaining_weight,
                id AS price_metal_name_id
            FROM
                price_metal_name;
        </sql>
    </changeSet>

    <changeSet id="003_PURE_METAL_SUMMARY_CREATE" author="${author}">
        <sqlFile path="056_CREATE_PURE_METAL_SUMMARY_FUNCTION.sql" relativeToChangelogFile="true" dbms="${dbms}"/>
    </changeSet>

    <changeSet id="004_PURE_METAL_SUMMARY_CREATE" author="${author}">
        <sql dbms="${dbms}">
            CREATE TRIGGER trg_after_insert_price_metal_name
                AFTER INSERT
                ON price_metal_name
                FOR EACH ROW
                EXECUTE FUNCTION create_pure_metal_summary();
        </sql>
    </changeSet>

    <changeSet id="005_PURE_METAL_SUMMARY_CREATE" author="${author}">
        <modifyDataType tableName="pure_metal_summary" columnName="total_cost" newDataType="NUMERIC"/>
        <modifyDataType tableName="pure_metal_summary" columnName="current_total_cost" newDataType="NUMERIC"/>
        <modifyDataType tableName="pure_metal_summary" columnName="remaining_weight" newDataType="NUMERIC"/>
    </changeSet>

</databaseChangeLog>