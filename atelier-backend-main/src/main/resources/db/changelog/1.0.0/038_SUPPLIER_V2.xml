<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001_SUPPLIER_V2_CREATE" author="${author}">
        <createTable tableName="supplier">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(256)"/>
            <column name="address" type="varchar(256)"/>
            <column name="city" type="varchar(128)"/>
            <column name="postal_code" type="varchar(16)"/>
            <column name="vat_number" type="varchar(16)"/>
            <column name="supply_type_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="country_id" type="bigint"/>
            <column name="currency_id" type="bigint"/>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_supplier__supply_type"
                                 baseTableName="supplier" baseColumnNames="supply_type_id"
                                 referencedTableName="supply_type" referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_supplier__country"
                                 baseTableName="supplier" baseColumnNames="country_id"
                                 referencedTableName="country" referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_supplier__currency"
                                 baseTableName="supplier" baseColumnNames="currency_id"
                                 referencedTableName="currency" referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="002_SUPPLIER_V2_UPDATE" author="${author}">
        <addColumn tableName="supplier">
            <column name="markup" type="numeric(5, 2)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>