<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001_ORDER_TECHNICAL_SHEET_CREATE" author="${author}">
        <createTable tableName="order_technical_sheet">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="general_note" type="VARCHAR(1200)"/>
            <column name="mounting_note_1" type="VARCHAR(1200)"/>
            <column name="mounting_note_2" type="VARCHAR(1200)"/>
            <column name="mounting_note_3" type="VARCHAR(1200)"/>
            <column name="mounting_note_4" type="VARCHAR(1200)"/>
            <column name="setting_note" type="VARCHAR(1200)"/>
            <column name="order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_order_technical_sheet__order"
                                 baseTableName="order_technical_sheet" baseColumnNames="order_id"
                                 referencedTableName="atelier_order" referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <createIndex tableName="order_technical_sheet" indexName="idx_order_technical_sheet_order_id">
            <column name="order_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>