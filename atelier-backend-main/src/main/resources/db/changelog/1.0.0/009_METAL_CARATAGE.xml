<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001_METAL_CARATAGE_CREATE" author="${author}">
        <createTable tableName="metal_caratage">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="price_metal_id" type="bigint"/>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_price_metal_metal_caratage"
                                 baseColumnNames="price_metal_id"
                                 baseTableName="metal_caratage"
                                 referencedColumnNames="id"
                                 referencedTableName="price_metal"
                                 onDelete="SET NULL"
                                 onUpdate="NO ACTION"/>
    </changeSet>

    <changeSet id="002_METAL_CARATAGE_CHANGE" author="${author}">
        <addColumn tableName="metal_caratage">
            <column name="wax_casting_value" type="numeric(4, 2)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
